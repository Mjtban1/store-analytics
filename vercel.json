{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { 
        "distDir": "build",
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "^/firebase-messaging-sw.js$",
      "headers": { "cache-control": "no-cache" },
      "dest": "/firebase-messaging-sw.js"
    },
    {
      "src": "^/manifest.json$",
      "headers": { "cache-control": "no-cache" },
      "dest": "/manifest.json"
    },
    {
      "src": "^/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "^/favicon.png",
      "dest": "/favicon.png"
    },
    {
      "src": ".*",
      "dest": "/index.html"
    }
  ]
}
