{
  "version": 2,
  "buildCommand": "chmod +x ./node_modules/.bin/react-scripts && npm run build",
  "installCommand": "npm install",
  "framework": "create-react-app",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "^/firebase-messaging-sw.js$",
      "headers": { "cache-control": "no-cache" },
      "dest": "/firebase-messaging-sw.js"
    },
    {
      "src": "^/manifest.json$",
      "headers": { "cache-control": "no-cache" },
      "dest": "/manifest.json"
    },
    {
      "src": "^/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "^/favicon.png",
      "dest": "/favicon.png"
    },
    {
      "src": ".*",
      "dest": "/index.html"
    }
  ]
}
